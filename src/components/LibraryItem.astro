---
import { Image } from "astro:assets";

const { item, isBook } = Astro.props;
---

<div>
    <a href={item.link}>
        <Image
            src={item.image}
            alt={item.title}
            width={320}
            height={isBook ? 480 : 320}
            class="rounded-lg pb-1"
        />
        <div class="pl-1 font-semibold text-lg leading-tight">{item.title}</div>
        <div class="pl-1">{item.authors}</div>
    </a>
</div>
