---
import { Image } from "@astrojs/image/components";

const { item, isBook } = Astro.props;
---

<div>
  <a href={item.link}>
    <Image
      src={item.image}
      alt={item.title}
      width={320}
      aspectRatio={isBook ? 2 / 3 : 1 / 1}
      class="rounded-lg pb-1"
    />
    <div class="pl-1">{item.title}</div>
    <div class="pl-1 font-light">{item.authors}</div>
  </a>
</div>
